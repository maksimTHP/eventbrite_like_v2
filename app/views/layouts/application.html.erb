        <%= link_to 'THP EventBrite Like', index_path, class:'navbar-brand' %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <%= link_to 'Accueil', index_path, class:'nav-item nav-link active' %>
            <% if user_signed_in? %>
            <div class="nav-item dropdown">
                <%= link_to 'Les événements', nil, class:'nav-link dropdown-toggle', 'id'=>"dropdownMenu2", 'data-toggle'=>"dropdown", 'aria-haspopup'=>"true", 'aria-expanded'=>"false"%>
                <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                  <%= link_to 'Voir les événements', index_path, class:'dropdown-item' %>
                  <%= link_to 'Ajouter un événement', nil, class:'dropdown-item' %>
                </div>
            </div>
            <% else %>
<!--            %= link_to 'La Team', team_path, class:'nav-item nav-link' %>
            %= link_to 'Get in Contact', contact_path, class:'nav-item nav-link' %> -->
<!--            % unless session[:user_id] != nil %> -->
            <div class="navbar-nav ml-auto pr-2">
              <%= link_to "Connexion", new_user_session_path, class:'nav-item nav-link pr-1' %>
              <%= link_to "Inscription", new_user_registration_path, class:'nav-item nav-link' %>
            </div>
            <% end %>
          </div>
          <div class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <div class="nav-item dropdown ">
                <%= link_to "Salut #{current_user.first_name} !", nil, class:'nav-link dropdown-toggle pr-2', 'id'=>"dropdownMenu3", 'data-toggle'=>"dropdown", 'aria-haspopup'=>"true", 'aria-expanded'=>"false"%>
                  <div class="dropdown-menu" aria-labelledby="dropdownMenu3">
                    <%= link_to "Mon profil", edit_user_registration_path, class:'dropdown-item' %>
                    <%= link_to "Déconnexion", destroy_user_session_path, class:'dropdown-item', 'data-confirm' => 'Tu vas être déconnecté...', method: :delete %>
                  </div>
              </div>
            <% end %>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <div class="container">
        <%= yield %>
      </div>
    </main>
  </body>
</html>
