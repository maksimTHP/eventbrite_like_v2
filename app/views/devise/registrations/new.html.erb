<div class="row">


  <div class=""id="register_connexion_form">

    <h2 class="d-flex justify-content-center text-muted">Inscription</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group mt-4">
        <label for="first_name">Prénom</label>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"form-control" %>
      </div>

      <div class="form-group">
        <label for="last_name">Nom</label>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>

      <div class="form-group">
        <label for="Description">Description</label>
        <%= f.text_area :description, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>

    <div class="form-group">
      <label for="Email">Email</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>


    <div class="form-group">
      <label for="password">Mot de passe</label>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caractères minimum)</em>
      <% end %><br/>
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
    </div>

    <div class="form-group">
      <label for="confirmation">Confirmation du mot de passe</label>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
    </div>

    <div class="d-flex flex-row justify-content-between">
      <div class="">
      <%= f.submit "S'inscrire", class:"btn btn-outline-primary mt-2" %>
      <% end %>
      </div>
      <div class="">
      <%= render "devise/shared/links" %>
      </div>
      </div>
</div>

</div>
