<div class="row">


  <div class="" id="register_connexion_form">

    <h2 class="d-flex justify-content-center text-muted">Connexion</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group mt-4">
      <label for="email">Email</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>

    <div class="form-group mt-4">
      <label for="password">Mot de passe</label>
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
    </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <label for="remember_me">Se souvenir de moi</label>
    </div>
  <% end %>

    <div class="">
      <div class="">
        <%= f.submit "Se connecter", class:"btn btn-outline-primary mt-2" %>
      </div>
    <% end %>
    <hr>
      <div class="d-flex flex-row justify-content-between">
        <%= render "devise/shared/links", class:"justify-content-end" %>
      </div>
    </div>

  </div>

</div>
