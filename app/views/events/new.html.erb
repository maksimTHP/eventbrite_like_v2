
<div class="form-group" id="event_form">

  <%= form_tag url_for(action: 'create'), method: 'post' do %>
  <h1 class="lead">Ajouter un évènement</h1>
  <br>
  <div style="width:300px;">
    <%= label_tag 'Titre : (Obligatoire)' %><br>
    <%= text_field_tag 'title', nil, class: 'form-control' %><br>
  </div>
  <div style="width:300px;">
    <%= label_tag 'Description' %><br>
    <%= text_area_tag 'description', nil, class: 'form-control' %><br>
  </div>
  <div style="width:300px;">
    <%= label_tag 'Lieu' %><br>
    <%= text_field_tag 'location', nil, class: 'form-control' %><br>
  </div>
  <div class="row">
  <div class="col" style="width:100px;">
    <%= label_tag 'Prix' %><br>
    <%= number_field_tag 'price', nil, class: 'form-control' %><br>
  </div>
  <div class="col" style="width:100px;">
    <%= label_tag 'Durée' %><br>
    <%= number_field_tag 'duration', nil, class: 'form-control' %><br>
  </div>
  </div
  <div style="width:200px;">
    <%= label_tag 'Date (Ne peut pas être une date dans le passé)' %><br>
    <%= datetime_field_tag 'start_date', nil, class: 'form-control' %><br>
    <hr>
    <%= submit_tag 'Ajouter cet évènement', class: 'btn btn-outline-primary' %>
  </div>
<% end %>
</div>
